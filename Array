#include<stdio.h>
int main()
{
	int a[3][3],i,j,sum=0;
	int *ptr[3][3];
	printf("Input of matrix\n");
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			printf("Element [%d][%d]",i,j);
			scanf("%d",&a[i][j]);
			ptr[i][j]=&a[i][j];	
			*ptr[i][j]=a[i][j];
				}
	}
	printf("\n Matrix is \n");
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			printf("%5d",a[i][j]);
			
	
	
	if (i==j)
		{
			
			sum=sum+*ptr[i][j];
		
			
		}}}
					printf("Sum of 3X3 matrix using pointer %d",sum); 

}
